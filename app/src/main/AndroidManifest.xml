<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jevin.jmart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".helpers.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.MoreActivity"></activity>
        <activity
            android:name=".views.LoginActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name=".views.RegisterActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity android:name=".views.HomeActivity" />
        <activity android:name=".views.ProductDetailActivity" />
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>